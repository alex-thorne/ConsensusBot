# Example Terraform Variables File
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!

# Basic Configuration
azure_region = "eastus"
environment  = "development"  # Options: development, staging, production
project_name = "consensusbot"

# Application Insights
app_insights_retention_days = 90  # Options: 30, 60, 90, 120, 180, 270, 365, 550, 730

# Storage
storage_replication_type = "LRS"  # Options: LRS, GRS, RAGRS, ZRS, GZRS, RAGZRS

# Function App
deploy_function_app   = true
app_service_plan_sku  = "Y1"  # Y1 = Consumption, B1/S1/P1v2 = Dedicated

# Azure DevOps Configuration
azure_devops_organization = "your-organization"
azure_devops_project      = "your-project"
azure_devops_repository   = "your-repo-id"

# Secrets - DO NOT SET HERE!
# Instead, set these via environment variables:
# export TF_VAR_slack_bot_token="xoxb-..."
# export TF_VAR_slack_signing_secret="..."
# export TF_VAR_slack_app_token="xapp-..."
# export TF_VAR_azure_devops_pat="..."
#
# Or use Azure CLI to populate Key Vault after infrastructure deployment
