{
  "name": "consensusbot",
  "version": "0.1.0",
  "description": "A Slack App to facilitate team decision-making through collaborative consensus building",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "build": "echo 'Build step - currently using Node.js directly'",
    "docker:build": "docker build -t consensusbot .",
    "docker:run": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "slack",
    "bot",
    "consensus",
    "decision-making",
    "collaboration"
  ],
  "author": "Alex Thorne",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.19.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
